{
    "manifest_version": 2,
    "name": "Kita Browser",
    "version": "1.0",
    "description": "Simple immersion tracker",
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Kita Browser",
        "default_icon": {
            "16": "/icons/icon16.png",
            "32": "/icons/icon32.png",
            "192": "/icons/icon192.png",
            "512": "/icons/icon512.png"
        }
    },
    "icons": {
        "16": "/icons/icon16.png",
        "32": "/icons/icon32.png",
        "192": "/icons/icon192.png",
        "512": "/icons/icon512.png"
    },
    "settings": {
        "page": "settings.html"
    },
    "permissions": [
        "activeTab",
        "storage",
        "unlimitedStorage"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*.youtube.com/*",
                "*://*.crunchyroll.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}