{
    "name": "kita-browser-extension",
    "version": "1.7.3",
    "scripts": {
        "build": "npm run lint && webpack --mode production && npm run ext:manifest",
        "build:dev": "webpack --mode production && npm run ext:manifest",
        "build:start": "cd dist && PORT=3002 npx serve",
        "start": "webpack serve --open --mode development",
        "start:live": "webpack serve --open --mode development --live-reload --hot",
        "lint": "npm run prettier:fix && npm run lint:fix",
        "lint:fix": "eslint --ignore-path .eslintignore --ext .js,.jsx,.ts,.tsx src --fix src/**/*.{js,jsx,ts,tsx}",
        "prettier:fix": "prettier --write \"src/**/*.{js,jsx,ts,tsx}\"",
        "test": "jest",
        "test:watch": "jest --watch",
        "ext:manifest": "cp -r ./ext/*.json ./ext/icons dist",
        "release": "standard-version"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/kitamersion/kita-browser-extension"
    },
    "license": "MIT",
    "author": {
        "name": "kitamersion"
    },
    "devDependencies": {
        "@babel/core": "^7.24.3",
        "@babel/plugin-transform-runtime": "^7.15.8",
        "@babel/preset-env": "^7.22.15",
        "@babel/preset-react": "^7.22.15",
        "@babel/preset-typescript": "^7.10.4",
        "@testing-library/jest-dom": "^6.1.4",
        "@testing-library/react": "^14.0.0",
        "@testing-library/user-event": "^14.5.0",
        "@types/chrome": "^0.0.263",
        "@types/jest": "^29.5.12",
        "@types/node": "^18.11.7",
        "@types/react": "^17.0.2",
        "@types/react-dom": "^18.0.2",
        "@types/uuid": "^9.0.8",
        "@typescript-eslint/eslint-plugin": "^5.56.0",
        "@typescript-eslint/parser": "^5.56.0",
        "autoprefixer": "^10.1.0",
        "babel-eslint": "^10.1.0",
        "babel-jest": "^29.7.0",
        "babel-loader": "^9.1.3",
        "css-loader": "^6.3.0",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-react": "^7.34.1",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-unused-imports": "^2.0.0",
        "file-loader": "^6.2.0",
        "html-webpack-plugin": "^5.3.2",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "lint-staged": "^15.2.2",
        "postcss": "^8.2.1",
        "postcss-loader": "^4.1.0",
        "prettier": "^2.8.7",
        "standard-version": "^9.5.0",
        "style-loader": "^3.3.0",
        "tailwindcss": "^3.4.3",
        "ts-jest": "^29.1.1",
        "ts-loader": "^9.4.2",
        "ts-node": "^10.9.2",
        "typescript": "^4.9.5",
        "webpack": "^5.91.0",
        "webpack-cli": "^5.1.4",
        "webpack-dev-server": "^4.3.1"
    },
    "dependencies": {
        "@babel/runtime": "^7.24.1",
        "@chakra-ui/icons": "^2.0.12",
        "@chakra-ui/react": "^2.4.1",
        "@emotion/react": "^11.11.4",
        "@emotion/styled": "^11.10.5",
        "@types/jsonfile": "^6.1.4",
        "date-fns": "^3.6.0",
        "dotenv-webpack": "^8.0.1",
        "framer-motion": "^7.6.12",
        "jsonfile": "^6.1.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-icons": "^5.0.1"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "eslint --fix",
            "prettier --write"
        ]
    },
    "engines": {
        "node": "18.17.1"
    }
}
