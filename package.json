{
    "name": "kita-browser-extension",
    "version": "2.4.1",
    "scripts": {
        "build": "npm run graphql:codegen && npm run lint && webpack --mode production && npm run ext:copy",
        "build:firefox": "TARGET_BROWSER=firefox npm run ext:manifest",
        "build:chrome": "TARGET_BROWSER=chrome npm run ext:manifest",
        "build:dev": "webpack --mode production && npm run ext:copy",
        "build:start": "cd dist && PORT=3002 npx serve",
        "start": "webpack serve --open --mode development",
        "start:live": "webpack serve --open --mode development --live-reload --hot",
        "lint": "npm run prettier:fix && npm run lint:fix",
        "lint:fix": "eslint --ignore-path .eslintignore --ext .js,.jsx,.ts,.tsx src --fix src/**/*.{js,jsx,ts,tsx}",
        "prettier:fix": "prettier --write \"src/**/*.{js,jsx,ts,tsx}\"",
        "test": "jest",
        "test:watch": "jest --watch",
        "ext:manifest": "node builder/build-manifest.ts",
        "ext:copy": "cp -r ./ext/*.json ./ext/icons dist",
        "release": "standard-version",
        "graphql:codegen": "npx graphql-codegen"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/kitamersion/kita-browser-extension"
    },
    "license": "MIT",
    "author": {
        "name": "kitamersion"
    },
    "browser-extension": {
        "firefox": {
            "id": "{3aff539d-2b68-41c8-96e8-fd0e994cf184}"
        }
    },
    "devDependencies": {
        "@babel/core": "^7.24.3",
        "@babel/plugin-transform-runtime": "^7.24.3",
        "@babel/preset-env": "^7.22.15",
        "@babel/preset-react": "^7.24.1",
        "@babel/preset-typescript": "^7.10.4",
        "@graphql-codegen/cli": "^5.0.2",
        "@graphql-codegen/typescript": "^4.0.6",
        "@graphql-codegen/typescript-operations": "^4.2.0",
        "@graphql-codegen/typescript-react-apollo": "^4.3.0",
        "@testing-library/jest-dom": "^6.1.4",
        "@testing-library/react": "^15.0.5",
        "@testing-library/user-event": "^14.5.0",
        "@types/chrome": "^0.0.263",
        "@types/crypto-js": "^4.2.2",
        "@types/jest": "^29.5.12",
        "@types/node": "^20.12.7",
        "@types/react": "^18.2.73",
        "@types/react-dom": "^18.0.2",
        "@types/uuid": "^9.0.8",
        "@typescript-eslint/eslint-plugin": "^5.56.0",
        "@typescript-eslint/parser": "^5.56.0",
        "autoprefixer": "^10.1.0",
        "babel-eslint": "^10.1.0",
        "babel-jest": "^29.7.0",
        "babel-loader": "^9.1.3",
        "css-loader": "^6.3.0",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-react": "^7.34.1",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-unused-imports": "^2.0.0",
        "file-loader": "^6.2.0",
        "html-webpack-plugin": "^5.3.2",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "lint-staged": "^15.2.2",
        "postcss": "^8.4.38",
        "postcss-loader": "^8.1.1",
        "prettier": "^2.8.7",
        "standard-version": "^9.5.0",
        "style-loader": "^4.0.0",
        "tailwindcss": "^3.4.3",
        "ts-jest": "^29.1.1",
        "ts-loader": "^9.4.2",
        "ts-node": "^10.9.2",
        "typescript": "^5.4.5",
        "webpack": "^5.91.0",
        "webpack-cli": "^5.1.4",
        "webpack-dev-server": "^4.3.1"
    },
    "dependencies": {
        "@apollo/client": "^3.10.1",
        "@babel/runtime": "^7.24.1",
        "@chakra-ui/icons": "^2.0.12",
        "@chakra-ui/react": "^2.4.1",
        "@emotion/react": "^11.11.4",
        "@emotion/styled": "^11.11.5",
        "@types/jsonfile": "^6.1.4",
        "crypto-js": "^4.2.0",
        "date-fns": "^3.6.0",
        "dotenv-webpack": "^8.1.0",
        "framer-motion": "^7.6.12",
        "graphql": "^16.8.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-icons": "^5.0.1",
        "recharts": "^2.12.6"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "eslint --fix",
            "prettier --write"
        ]
    },
    "engines": {
        "node": "18.17.1"
    }
}
